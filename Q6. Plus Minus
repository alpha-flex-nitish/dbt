#include <iostream>
#include <cmath>
#include <bits/stdc++.h>
using namespace std;

int main(){

    int n;
    int i, ar[i], pos, neg, zer;

    cin >> n;
       //cout << n;

    if(0<n&&n<=100)
    {

    for(i=0;i<n;i++)

    {
        cin >> ar[i];
    }

    }
    else
    {
        cout << "invalid input--n";
    }

    for(i=0;i<n;i++)
    {

    if(-100<=ar[i]&&ar[i]<=100)
    {
        if(ar[i]==0)
        {
            cout << " zero-" << i;
        }
        else if(0<ar[i])
        {
            cout << " positive-" << i;
        }
        else if(ar[i]<0)
        {
            cout << " negative-" << i;
        }
    }
    else
    {
        cout << "invalid input--ar[]";
    }

    }

    for(i=0;i<n;i++)

    {
        cout << ar[i];
    }
    return 0;

}
