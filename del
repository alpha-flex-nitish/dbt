#include<cstring>
#include <cstdio>
#include<vector>*/
//vector<int> v2(set1.begin(),set1.end());
#include <bits/stdc++.h>
using namespace std;
int main(){
    int n, i;
    long long int w, l, x, strap=0;
    cin >> n >> l >> w;
    set<long long int> s;
    for(i=0;i<n;i++){
        cin >> x;
        s.insert(x);
    }
    /*for(auto itk=s.begin();itk!=s.end();itk++){
				cout<<*itk<<" " << endl;
		}*/
    vector<long long int> v(s.begin(),s.end());
    for(auto it=v.begin();it!=v.end()-1;it++){
        //cout << "*it = " << *it << endl;
        //cout << "*(it+1) = " << *(it+1) << endl;
        if((*(it+1)-*it)<=w){
            strap = strap+0;
            //cout << "case 1" << endl;
            //cout << "strap = " << strap << endl;
        }
        else if((*(it+1)-*it)>w){
            strap =  strap + (*(it+1)-*it)/w +1;
            cout << "case 2" << endl;
            cout << "strap = " << strap << endl;
        }
    }
    auto it = v.begin();
    if(*it<=w){
        strap = strap+0;
        //cout << "case 3" << endl;
        //cout << "strap = " << strap << endl;
    }
    else if(*it>w){
        strap =  strap + *it/w + 1;
        //cout << "case 4" << endl;
        //cout << "strap = " << strap << endl;
    }
    auto it1 = v.end();
    if(l-*it1<=w){
        strap = strap+0;
        //cout << "case 5" << endl;
        //cout << "strap = " << strap << endl;
    }
    else if((l-*it1)>w){
        strap =  strap + (l-*it1)/w + 1;
        //cout << "case 6" << endl;
        //cout << "strap = " << strap << endl;
    }
    cout << strap;
    return 0;
}
