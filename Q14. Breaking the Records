#include <iostream>
#include<cmath>
#include<bits/stdc++.h>
using namespace std;

int main() {
    int n=0, i=0, proceed=0, br=0, ls=0, maxs=0, mins=0, nomax=0, nomin=0;
    int s[i];
    cin >> n;
    

    for(i=0;i<n;i++){
        cin >> s[i];
    }
    if((n>=1)&&(n<=1000))
    {
        for(i=0;i<n;i++){}
            if((s[i]>=0)&&(s[i]<=100000000)){
                proceed = 1;
                }
            else{
                proceed =0;
            }

        }
    else{
        proceed = 0;
    }

    if(proceed==1){
        maxs = s[0];
        mins = s[0];
            for(i=1;i<n;i++){

                if(s[i]>maxs)
                    {
                        maxs = s[i];
                        br++;
                    }
                    else if(s[i]<=maxs){
                        nomax++;
                    }
                }
            for(i=1;i<n;i++){

                if(s[i]<mins)
                    {
                        mins = s[i];
                        ls++;
                    }
                    else if(s[i]>=mins){
                        nomin++;
                    }
                }


            }


    else if(proceed==0){
        cout << "invalid input";
    }

    cout << br << " " << ls;
    return 0;
}
